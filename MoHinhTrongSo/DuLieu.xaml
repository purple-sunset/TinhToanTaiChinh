<Window x:Class="MoHinhTrongSo.DuLieu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoHinhTrongSo"
        
        Title="Dữ Liệu" Height="550" Width="615" FontSize="14">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="333*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="DataGrid" ItemsSource="{Binding Path=ThongSoTable}" AutoGenerateColumns="True" AutoGeneratedColumns="DataGrid_OnAutoGeneratedColumns" HorizontalAlignment="Left" Height="318" Margin="10,85,0,0" VerticalAlignment="Top" Width="584" Grid.ColumnSpan="2"
                              Grid.Column="0" FontSize="12" RenderTransformOrigin="0.497,0.168">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Button Content="Remove" Margin="3" Command="Delete"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>
        <Button x:Name="BtnTinh" Content="Tính Toán" HorizontalAlignment="Left" Height="40" Margin="87,440,0,0" VerticalAlignment="Top" Width="156" Click="BtnTinh_Click" Grid.Column="1"/>
        <Button x:Name="BtnXuat" Content="Xuất ra Excel" HorizontalAlignment="Left" Height="40" Margin="319,22,0,0" VerticalAlignment="Top" Width="103" Click="BtnXuat_Click" Grid.Column="1"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="58" Margin="11,12,0,0" Stroke="Black" VerticalAlignment="Top" Width="382" Grid.ColumnSpan="2"/>
        <Label Content="Thêm Cột" HorizontalAlignment="Left" Height="30" Margin="33,27,0,0" VerticalAlignment="Top" Width="80" RenderTransformOrigin="1.038,0.667"/>
        <TextBox x:Name="TxtCot" HorizontalAlignment="Left" Height="30" Margin="118,27,0,0" TextWrapping="Wrap" Text="Dự Án 1" VerticalAlignment="Top" Width="170" VerticalContentAlignment="Center" Grid.ColumnSpan="2"/>
        <Button x:Name="BtnThem" Content="Thêm" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="156,26,0,0" VerticalAlignment="Top" Width="58" Click="BtnThem_Click" RenderTransformOrigin="0.453,0.4"/>

    </Grid>
</Window>
